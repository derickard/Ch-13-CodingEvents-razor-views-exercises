@model List<CodingEvents.Models.EventTag>

@if (Model.Count == 0)
{
    <h1>No events with the given tag</h1>
}
else
{
    <h1>Events Tagged: @Model[0].Tag.Name</h1>
    <ul>
        @foreach(var evtTag in Model)
        {
            <li><a asp-controller="Events" asp-action="Detail" asp-route-id="@evtTag.Event.Id">@evtTag.Event.Name</a></li>
        }
    </ul>
}